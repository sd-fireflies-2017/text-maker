<div class="content">

  <%= form_for [@team, @player], url: team_player_path(@team, @player), method: :patch do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :phone_number_with_area_code %>
    <%= f.text_field :phone_number %>

    <%= f.label :core_player? %>
    <%= f.check_box :core, checked: Roster.find_by(team: @team, player: @player).core %>

    <%= f.submit "Update Player" %>

  <% end %>

</div>
